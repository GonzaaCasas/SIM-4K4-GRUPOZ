                                        <Setter Property="HorizontalContentAlignment"
                                                                Value="Center" />

                                    </Style>
                                </DataGridTextColumn.HeaderStyle>

                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DockPanel Width="40"></DockPanel>

                    <DataGrid x:Name="dgvVectorEstado3" ItemsSource="{Binding}" AutoGenerateColumns="False">
